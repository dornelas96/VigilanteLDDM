<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrar">
    
    <TextView
        android:id="@+id/text_view_valor_carteira"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:text="R$ 200,00"
        android:textAlignment="center"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_view_retirada"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Forma de retirada"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_valor_carteira" />

    <Button
        android:id="@+id/retirar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="36dp"
        android:enabled="true"
        android:text="Retirar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="234dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:text="Conta Corrente"
        app:layout_constraintTop_toBottomOf="@+id/radioButton4"
        tools:layout_editor_absoluteX="26dp" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="234dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:text="PayPal"
        app:layout_constraintTop_toBottomOf="@+id/radioButton3"
        tools:layout_editor_absoluteX="26dp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="234dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:text="PicPay"
        app:layout_constraintTop_toBottomOf="@+id/text_view_retirada"
        tools:layout_editor_absoluteX="26dp" />


</android.support.constraint.ConstraintLayout>